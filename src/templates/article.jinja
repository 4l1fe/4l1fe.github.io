{% extends "base.jinja" %}

{% block content %}
    <div class="row">
        <div id="content" class="col-lg-9 order-2 order-lg-1">
            {{ content | update_classes('h2, h3, h4, h5, h6', 'mt-5 mb-3') | update_classes('img', 'd-block mx-auto mw-100 h-100') }}
        </div>
        <div id="toc" class="col-lg-3 order-1 order-lg-2 ps-5">
            <strong class="d-block py-1 my-2 border-bottom fs-5"><span class="iconify" data-icon="gridicons:list-ordered"></span> Table of content</strong>
            {{ toc | update_classes('a', 'text-decoration-none') }}
        </div>
    </div>
    <div class="row">
        <div id="comments" class="col-lg-9">
            <script src="https://utteranc.es/client.js"
                    repo="4l1fe/4l1fe.github.io"
                    issue-term="pathname"
                    label="comment"
                    theme="github-light"
                    crossorigin="anonymous"
                    async>
            </script>
        </div>
    </div>
{% endblock content %}

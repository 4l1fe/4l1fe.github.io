{% extends "base.jinja" %}

{% block content %}
    <div class="row">
        <div id="about" class="col-12">
            <h1>About</h1>
            <p>Observe existence <span class="iconify" data-icon="fa-solid:eye"></span>, drink tea <span class="iconify" data-icon="fa:coffee"></span>, experiment <span class="iconify" data-icon="icon-park-solid:experiment"></span>, cognize <span class="iconify" data-icon="fa-solid:pen-alt"></span></p>
	</div>
    </div>
    <div class="row">
        <div id="about" class="col-lg-3">
            <h2>Profiles</h2>
                <ul class="list-unstyled">
                    <li class="mb-2"><a class="me-1 {% if analytics_enabled %}umami--click--profiles-github{% endif %}" target="_blank" rel="noopener noreferrer" href="https://github.com/4l1fe">Github <span class="iconify" data-icon="fa-brands:github"></span></a></li>
                    <li class="mb-2"><a class="me-1 {% if analytics_enabled %}umami--click--profiles-linkedin{% endif %}" target="_blank" rel="noopener noreferrer" href="https://www.linkedin.com/in/dmitrii-krasnov">Linkedin <span class="iconify" data-icon="brandico:linkedin-rect"></span></a></li>
                    <li class="mb-2"><a class="me-1 {% if analytics_enabled %}umami--click--profiles-stackexchange{% endif %}" target="_blank" rel="noopener noreferrer" href="https://stackexchange.com/users/5761123/r45i?tab=accounts">Stackexchange <span class="iconify" data-icon="fa-brands:stack-exchange"></span></a></li>
                    <li class="mb-2"><a class="me-1 {% if analytics_enabled %}umami--click--profiles-telegram{% endif %}" target="_blank" rel="noopener noreferrer" href="https://t.me/kvdm_dev">Telegram <span class="iconify" data-icon="fa:telegram"></span></a></li>
                    
                </ul>
        </div>
	<div class="col">
	    <h2>Live Services</h2>
	    <ul class="list-unstyled">
                <li ><a class="{% if analytics_enabled %}umami--click--services-analytics{% endif %}" target="_blank" rel="noopener noreferrer" {% if analytics_enabled %}href="{{ analytics_service_page }}"{% endif %}>Analytics <span class="iconify" data-icon="fa6-solid:chart-simple"></span></a>
                <br><small class="text-muted">Web analytics <strong>Umami</strong>. Tracking page views and link clicks.</small></li>
                <li ><a class="{% if analytics_enabled %}umami--click--services-monitoring{% endif %}" target="_blank" rel="noopener noreferrer" {% if monitoring_enabled %}href="{{ monitoring_service_page }}"{% endif %}>Monitoring <span class="iconify" data-icon="fontisto:area-chart"></span></a>
                <br><small class="text-muted">Monitoring resources With <strong>Grafana</strong> consumed by live service containers.</small></li>
                <li ><a class="{% if analytics_enabled %}umami--click--services-statuspage{% endif %}" target="_blank" rel="noopener noreferrer" {% if statuspage_enabled %}href="{{ statuspage_service_page }}"{% endif %}>Status Page <span class="iconify" data-icon="akar-icons:circle-check-fill"></span></a>
                <br><small class="text-muted">Check for the live services are running.</small></li>
            </ul>
	</div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2 class="d-inline me-2">Articles</h2>
            <a class="me-1 {% if analytics_enabled %}umami--click--articles-subscribe{% endif %}" href="rss.xml">Subscribe <span class="iconify" data-icon="bi:rss-fill"></span></a>
            <ul class="list-inline my-3">
                <li class="list-inline-item text-muted"><span class="iconify" data-icon="ic:sharp-view-comfy"></span> View</li>
                <li class="list-inline-item"><a href="">Titles</a></li>
            </ul>
        </div>
    </div>
    {% for adata in articles_data %}
    <div class="row">
        <div class="col-lg-10">
            <h5><a class="link-dark link-dark-hover" href="{{ adata.relative_link | trailing_slash }}">{{ adata.title }}</a></h3>
        </div>
        <div class="col-lg-2 text-lg-end">
            <p class="text-muted"><span class="iconify me-1" data-icon="ic:round-date-range"></span>{{ adata.created_date.strftime('%m-%Y') }}</p>
        </div>
    </div>
    {% endfor %}

{% endblock content %}
